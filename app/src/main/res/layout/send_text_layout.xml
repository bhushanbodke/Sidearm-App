<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/sucessMsg"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Message Send Successfully"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:visibility="gone"
        android:background="#94bfd1"
        />

    <LinearLayout
        android:layout_width="75dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:id="@+id/sendButton"
        app:layout_constraintTop_toBottomOf="@+id/sucessMsg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/rounded_shap_10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/round_send_24"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Send"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_bold"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/bigInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:gravity="top|start"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sendButton"
        android:layout_width="0dp"
        android:padding="16dp"
        android:overScrollMode="always"
        android:textSize="16sp"
        android:hint="Type here..."
        android:inputType="textMultiLine"
        android:layout_margin="20dp"
         />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/bigInput"
        android:id="@+id/MsgTitle"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_height="30dp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="#5a8ca1"
        android:text="Received Messages ..."
        />
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/MsgTitle"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ReceivedMsg"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>