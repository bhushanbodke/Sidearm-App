<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/DeviceNameText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/ubuntu_medium"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25dp"
            android:textColor="#5a8ca1"
            android:text="Device Name" />

    <LinearLayout
        android:id="@+id/Sendtext"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintTop_toBottomOf="@+id/DeviceNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Shared_folder"
        android:layout_marginEnd="10dp" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/round_text_snippet_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="17dp"
            android:text="Send Text"/>

    </LinearLayout>

    <!-- RIGHT BLOCK -->
    <LinearLayout
        android:id="@+id/Shared_folder"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintTop_toBottomOf="@+id/DeviceNameText"
        app:layout_constraintStart_toEndOf="@+id/Sendtext"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/round_folder_shared_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="17dp"
            android:text="shared folder"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>