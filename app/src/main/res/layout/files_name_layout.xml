<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:layout_marginTop="15dp"
    >
    <LinearLayout
        android:id="@+id/logoAndSize"
        android:layout_width="50dp"
        android:orientation="vertical"
        android:layout_height="50dp">
        <ImageView

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/filename"
            android:id="@+id/filetype"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:src="@drawable/baseline_insert_drive_file_24"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/filename"
            app:layout_constraintStart_toEndOf="@id/filetype"
            android:id="@+id/fileSize"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:text="file size "
            />
    </LinearLayout>
    <TextView
        app:layout_constraintStart_toEndOf="@id/logoAndSize"
        app:layout_constraintEnd_toStartOf="@+id/download"
        android:id="@+id/filename"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:layout_width="0dp"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:textSize="13sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="file name goes here ..">
    </TextView>
    <ImageView
        android:id="@+id/download"
        app:layout_constraintStart_toEndOf="@id/filename"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_download_for_offline_24"/>


</androidx.constraintlayout.widget.ConstraintLayout>